<ScrollView android:layout_height="match_parent"
              android:layout_width="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
            >

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="200dp"
                                            app:cardElevation="5dp"
                                            android:layout_marginBottom="8dp"

        >

        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        >

            <ImageView
                android:id="@+id/thumbnail_shopping_list"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src = "@drawable/cover_about_us"/>


            <TextView
                android:id="@+id/grossary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textAllCaps="true"
                android:text="Grossary"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:elevation="3dp"
            />

            <View android:id="@+id/line"
                android:background="@color/white"
                  android:layout_below="@id/grossary_title"
                  android:layout_height="2dp"
                  android:layout_width="160dp"
                  android:layout_centerHorizontal="true"
                  android:elevation="2dp"
                  />

            <TextView
                android:id="@+id/about_us_text"
                android:layout_below="@id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:text="About Us"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:elevation="3dp"
            />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardBackgroundColor="@android:color/black"
                android:alpha="0.4"
                android:elevation="0dp"
            />

        </RelativeLayout>
     </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:layout_margin="8dp"
                                        app:cardElevation="5dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView android:layout_width="140dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/sunil"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/amber">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="12dp"
                              android:paddingLeft="12dp"
                              android:text="Sunil Chaudhari"
                              android:textColor="@color/white"
                              android:textSize="18sp"
                    />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:text="Mentor"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView android:id="@+id/sunil_view_profile"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="right|bottom"
                          android:gravity="right|bottom"
                          android:paddingRight="16dp"
                          android:paddingBottom="16dp"
                          android:layout_alignParentBottom="true"
                          android:text="View Profile"
                          android:textAllCaps="true"
                          android:textColor="@color/orange"
                          android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:layout_margin="8dp"
                                        app:cardElevation="5dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView android:layout_width="140dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/kushal"
                        />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/brown">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="12dp"
                          android:paddingLeft="12dp"
                          android:text="Khusaal Giri"
                          android:textColor="@color/white"
                          android:textSize="18sp"
                        />

                    <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="16dp"
                          android:text="aka Jugal (Hello)"
                          android:textColor="@color/white"
                          android:alpha="0.6"
                          android:textSize="12sp"
                          android:fontFamily="casual"

                />
                </LinearLayout>
                <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="left|bottom"
                          android:gravity="left|bottom"
                          android:paddingLeft="16dp"
                          android:paddingBottom="16dp"
                          android:layout_alignParentBottom="true"
                          android:text="Team Member"
                          android:textAllCaps="true"
                          android:textColor="@color/white"
                          android:textSize="12sp"/>

                <TextView android:id="@+id/kushal_view_profile"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="right|bottom"
                          android:gravity="right|bottom"
                          android:paddingRight="16dp"
                          android:paddingBottom="16dp"
                          android:layout_alignParentBottom="true"
                          android:text="View Profile"
                          android:textAllCaps="true"
                          android:textColor="@color/orange"
                          android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:layout_margin="8dp"
                                        app:cardElevation="5dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView android:layout_width="140dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/pankaj"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
            android:background="@color/red">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="12dp"
                              android:paddingLeft="12dp"
                              android:text="Pankaj Sankpal"
                              android:textColor="@color/white"
                              android:textSize="18sp"
                    />

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingLeft="16dp"
                              android:text="aka Panky"
                              android:textColor="@color/white"
                              android:alpha="0.6"
                              android:textSize="12sp"
                              android:fontFamily="casual"

                    />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:text="Team Member"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView android:id="@+id/pankaj_view_profile"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="right|bottom"
                          android:gravity="right|bottom"
                          android:paddingRight="16dp"
                          android:paddingBottom="16dp"
                          android:layout_alignParentBottom="true"
                          android:text="View Profile"
                          android:textAllCaps="true"
                          android:textColor="@color/orange"
                          android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:layout_margin="8dp"
                                        app:cardElevation="5dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView android:layout_width="140dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/gogo"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/colorAccent">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="12dp"
                              android:paddingLeft="12dp"
                              android:text="Gaurav Shinde"
                              android:textColor="@color/white"
                              android:textSize="18sp"
                    />

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingLeft="16dp"
                              android:text="aka Gogo"
                              android:textColor="@color/white"
                              android:alpha="0.6"
                              android:textSize="12sp"
                              android:fontFamily="casual"

                    />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:text="Team Member"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView android:id="@+id/gogo_view_profile"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="right|bottom"
                          android:gravity="right|bottom"
                          android:paddingRight="16dp"
                          android:paddingBottom="16dp"
                          android:layout_alignParentBottom="true"
                          android:text="View Profile"
                          android:textAllCaps="true"
                          android:textColor="@color/orange"
                          android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        app:cardElevation="5dp"
                                        android:background="@color/black"
                                >

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="12dp"
                  android:paddingBottom="12dp"
                  android:text="(Special Thanks to Melwyn Saldhana)"
                  android:textColor="@color/white"
                  android:background="@color/black"
                  android:alpha="0.6"
                  android:textSize="12sp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
        />
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
